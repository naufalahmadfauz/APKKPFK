    <!-- CSS Libraries -->
    <!-- Template CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/components.css">
</head>

<body class="sidebar-mini">
<div id="app">
    <div class="main-wrapper">
        <div class="navbar-bg"></div>
        {{> navbar}}
        {{>sidebarApoteker}}
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <h1>List Data Pengurangan Obat</h1>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Pengurangan Obat</h4>
                                <a href="/apoteker/pengurangan_obat" class="btn btn-primary">Buat Pengurangan Obat Baru</a>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <tr>
                                            <th>ID Pengurangan Obat</th>
                                            <th>Status Pengurangan Obat</th>
                                            <th>Aksi</th>
                                        </tr>
                                        {{#penguranganObatRecords}}
                                            <tr>
                                                <td>{{id_pengurangan_obat}}</td>
                                                <td>{{status_pengurangan_obat}}</td>
                                                <td><a href="/apoteker/pengurangan_obat/{{id_pengurangan_obat}}" class="btn btn-primary">Detail</a></td>
                                            </tr>
                                        {{/penguranganObatRecords}}
                                    </table>
                                </div>
                            </div>
                            
                            <div class="card-footer text-right">
                                <nav class="d-inline-block">
                                    <ul class="pagination mb-0">
                                        <li class="page-item">
                                            <a class="page-link" href="/apoteker/list_pengurangan_obat?offset={{prevOffset}}&limit={{limit}}" tabindex="-1"><i class="fas fa-chevron-left"></i> Sebelumnya</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="/apoteker/list_pengurangan_obat?offset={{nextOffset}}&limit={{limit}}">Selanjutnya <i class="fas fa-chevron-right"></i></a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section-body">
                </div>
            </section>
        </div>
        
    </div>
</div>
