<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>APKKPFK &mdash; Klinik Pratama Fitrah Keluarga</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <!-- CSS Libraries -->
    <!-- Template CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/components.css">
</head>

<body class="sidebar-mini">
<div id="app">
    <div class="main-wrapper">
        <div class="navbar-bg"></div>
        {{> navbar}}
        {{>sidebarApoteker}}
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <h1>List Stok Obat</h1>
                </div>
                <form class="col-6">
                    <div class="input-group">
                        <input id="cari_stok_obat_input" type="text" class="form-control"
                               placeholder="Cari Stok Obat">
                        <div class="input-group-btn">
                            <a href="#" id="cari_stok_obat" class="btn btn-primary"><i
                                    class="fas fa-search"></i></a>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Pengurangan Obat</h4>
                                
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <tr>
                                            <th>ID Stok Obat</th>
                                            <th>Nomer Batch</th>
                                            <th>Nama Obat</th>
                                            <th>Jumlah</th>
                                            <th>Satuan</th>
                                            <th>Harga Satuan</th>
                                            <th>Expire</th>
                                            <th>Tipe Obat</th>
                                        </tr>
                                        {{#stokObat}}
                                            <tr>
                                                <td>{{id_stok_obat}}</td>
                                                <td>{{nomer_batch}}</td>
                                                <td>{{dataObat.nama_obat}}</td>
                                                <td>{{jumlah}}</td>
                                                <td>{{satuan}}</td>
                                                <td>Rp. {{harga_satuan}}</td>
                                                <td id="expire-{{@index}}"></td>
                                                <td>{{tipe_obat}}</td>
                                            </tr>
                                        {{/stokObat}}
                                    </table>
                                </div>
                            </div>
                            
                            <div class="card-footer text-right">
                                <nav class="d-inline-block">
                                    <ul class="pagination mb-0">
                                        <li class="page-item">
                                            <a class="page-link" href="/apoteker/list_stok_obat?offset={{prevOffset}}&limit={{limit}}" tabindex="-1"><i class="fas fa-chevron-left"></i> Sebelumnya</a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" href="/apoteker/list_stok_obat?offset={{nextOffset}}&limit={{limit}}">Selanjutnya <i class="fas fa-chevron-right"></i></a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="section-body">
                </div>
            </section>
        </div>
        
    </div>
</div>
<script src="https://unpkg.com/dayjs/dayjs.min.js"></script>

<script>
    
    document.getElementById('cari_stok_obat').addEventListener('click', function () {
        let cariStokObatInput = document.getElementById('cari_stok_obat_input').value;
        window.location.href = '/apoteker/list_stok_obat?limi=100&search=' + cariStokObatInput;
    });
    
    let expireFormatted;
        {{#each stokObat}}
        if ('{{expire}}'){
            expireDate = '{{expire}}';
            expireFormatted = dayjs(expireDate).format('DD-MM-YYYY');
            document.getElementById('expire-' + {{@index}}).innerHTML = expireFormatted;
        }
        {{/each}}
</script>
<!-- General JS Scripts -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
