    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <!-- CSS Libraries -->

    <!-- Template CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/components.css">
</head>

<body class="sidebar-mini">
<div id="app">
    <div class="main-wrapper">
        <div class="navbar-bg"></div>
        <nav class="navbar navbar-expand-lg main-navbar">
        </nav>
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <h1>Detail Rekam Medis</h1>
                </div>
                <div class="row">
                    <div id="isi_print"
                         class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                        <div class="card card-primary">
                            <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label>ID Rekam Medis</label>
                                        <p class="text-dark bold"><strong> {{rekamMedis.id_rekam_medis}} </strong></p>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="last_name">Nama Pasien</label>
                                        <p class="text-dark bold">
                                            <strong> {{rekamMedis.dataPasien.nama_lengkap}} </strong></p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="first_name">Jenis Kelamin</label>
                                        <p class="text-dark bold">
                                            <strong> {{rekamMedis.dataPasien.jenis_kelamin}} </strong></p>
                                    </div>

                                    <div class="form-group col-6">
                                        <label for="first_name">Usia</label>
                                        <p class="text-dark bold"><strong> {{age}} </strong></p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="first_name">Hasil Lab</label>
                                        <p class="text-dark bold"><strong> {{rekamMedis.hasil_lab}} </strong></p>

                                    </div>
                                    <div class="form-group col-6">
                                        <label for="last_name">Gejala</label>
                                        <p class="text-dark bold"><strong> {{rekamMedis.gejala}}</strong></p>

                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label >Hasil Lab</label>
                                        <p class="text-dark bold"><strong> {{rekamMedis.hasil_lab}} </strong></p>
                                    </div>
                                </div>

                                <div class="row">

                                    <div class="section-title">Terapi</div>
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                            <tr>
                                                <th scope="col">Nama Obat</th>
                                                <th scope="col">Total</th>
                                                <th scope="col">Dosis</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {{#each terapiDetails}}
                                                <tr>
                                                    <td>{{nama_obat}}</td>
                                                    <td>{{total}}</td>
                                                    <td>{{dosis}}</td>
                                                </tr>
                                            {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="section-body">
                        <div class="form-group">
                            <a href="/dokter/list_rekam_medis"
                               class="btn btn-primary btn-lg btn-block">Kembali
                            </a>
                            <a id="cetak" href="#"
                               class="btn btn-primary btn-lg btn-block">Cetak rekam medis
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        </div>

    </div>
</div>
<script>

    let formattedDate;
        {{#each detailPengadaan}}
        expireDate = '{{this.expire}}';
        formattedDate = dayjs(expireDate).format('DD-MM-YYYY');
        document.getElementById('expire-' + {{@index}}).innerHTML = formattedDate;
        {{/each}}

    document.getElementById('cetak').addEventListener('click', function () {
        var printContents = document.getElementById('isi_print').innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;

        window.print();

        document.body.innerHTML = originalContents;
    });
</script>
