<script>

    document.getElementById('foto_ktp').addEventListener('change', function (e) {
        const file = e.target.files[0];
        const fileType = file.type;
        const fileSize = file.size / 1024 / 1024; // size in MB

        // Check file type
        if (fileType !== 'image/jpeg' && fileType !== 'image/png' && fileType !== 'image/jpg') {
            swal('Error', 'Gambar harus berbentuk JPG/PNG/JPEG', 'error');
            return;
        }

        // Check file size
        if (fileSize > 10) {
            swal('Error', 'Ukuran file melebihi 10MB!', 'error');
            return;
        }

        // Check file dimensions
        const img = new Image();
        img.onload = function () {
            const width = this.width;
            const height = this.height;

            if (width < 1920 || height < 1080) {
                swal('Error', 'Resolusi foto terlalu rendah!', 'error');
                return;
            }
        };
        img.src = URL.createObjectURL(file);
    });
    document.getElementById('foto_jkn').addEventListener('change', function (e) {
        const file = e.target.files[0];
        const fileType = file.type;
        const fileSize = file.size / 1024 / 1024; // size in MB

        // Check file type
        if (fileType !== 'image/jpeg' && fileType !== 'image/png' && fileType !== 'image/jpg') {
            swal('Error', 'Gambar harus berbentuk JPG/PNG/JPEG', 'error');
            return;
        }

        // Check file size
        if (fileSize > 10) {
            swal('Error', 'Ukuran file melebihi 10MB!', 'error');
            return;
        }

        // Check file dimensions
        const img = new Image();
        img.onload = function () {
            const width = this.width;
            const height = this.height;

            if (width < 1920 || height < 1080) {
                swal('Error', 'Resolusi foto terlalu rendah!', 'error');
                return;
            }
        };
        img.src = URL.createObjectURL(file);
    });
    //Ini menghilangkan form JKN kalau pasien jkn tidak secara default
    document.addEventListener('DOMContentLoaded', function () {
        // Get the select element
        const selectElement = document.getElementById('pasien_jkn');
        // Get the div element
        const divElement = document.getElementById('data_jkn');
        // Get the foto_jkn input element
        const fotoJknInput = document.getElementById('foto_jkn');
        // Initially hide the div
        divElement.style.display = 'none';
        // Remove the required attribute from the foto_jkn input
        fotoJknInput.removeAttribute('required');
        // Listen for changes on the select element
        selectElement.addEventListener('change', function (event) {
            // If the selected value is "Ya", show the div and make the foto_jkn input required
            if (event.target.value === 'Ya') {
                divElement.style.display = 'block';
                fotoJknInput.setAttribute('required', '');
            } else {
                // Otherwise, hide the div and remove the required attribute from the foto_jkn input
                divElement.style.display = 'none';
                fotoJknInput.removeAttribute('required');
            }
        });
    });
    document.addEventListener('DOMContentLoaded', function () {
//Ini post fetch sama validasi
        const form = document.getElementById('form_daftar_pasien_baru');
        form.addEventListener('submit', function (event) {
            event.preventDefault();

            //get element input
            let nama_lengkap = document.getElementById('nama_lengkap');
            let tanggal_lahir = document.getElementById('tanggal_lahir');
            let nik = document.getElementById('nik');
            let alamat = document.getElementById('alamat');
            let jenis_kelamin = document.getElementById('jenis_kelamin');
            let pasien_jkn = document.getElementById('pasien_jkn');
            let faskes_tingkat = document.getElementById('faskes_tingkat');
            let nomer_kartu = document.getElementById('nomer_kartu');

            // Check if the fields are empty
            if (!nama_lengkap.value) {
                swal('Error', 'Tolong isi nama lengkap!', 'error');
                return;
            }
            if (!tanggal_lahir.value) {
                swal('Error', 'Tolong isi tanggal lahir!', 'error');
                return;
            }
            if (!nik.value) {
                swal('Error', 'Tolong isi NIK!', 'error');
                return;
            }
            if (!alamat.value) {
                swal('Error', 'Tolong isi alamat!', 'error');
                return;
            }
            if (!jenis_kelamin.value) {
                swal('Error', 'Tolong pilih jenis kelamin!', 'error');
                return;
            }
            if (!pasien_jkn.value) {
                swal('Error', 'Tolong pilih pasien JKN!', 'error');
                return;
            }
            if (pasien_jkn.value === 'Ya') {
                if (!faskes_tingkat.value) {
                    swal('Error', 'Tolong isi faskes tingkat!', 'error');
                    return;
                }
                if (!nomer_kartu.value) {
                    swal('Error', 'Tolong isi nomer kartu!', 'error');
                    return;
                }
            }

            // Format the date to the 'DD-MM-YY' format
            const originalDate = new Date(tanggal_lahir.value);
            let day = originalDate.getDate().toString();
            let month = (originalDate.getMonth() + 1).toString(); // Months are zero-based
            let year = originalDate.getFullYear();
            day = day.padStart(2, '0');
            day = day.padStart(2, '0');
            month = month.padStart(2, '0');
            // Format the date to the 'DD-MM-YY' format
            //fetch post

            const formattedDate = `${day}-${month}-${year}`;
            
            let foto_ktp_input = document.getElementById('foto_ktp');
            let foto_ktp_file = foto_ktp_input.files[0];
            let foto_jkn_input = document.getElementById('foto_jkn');
            let foto_jkn_file = foto_jkn_input.files[0];

            let formData = new FormData();
            formData.append('nama_lengkap', nama_lengkap.value);
            formData.append('tanggal_lahir', formattedDate);
            formData.append('nik', nik.value);
            formData.append('alamat', alamat.value);
            formData.append('jenis_kelamin', jenis_kelamin.value);
            formData.append('ktp_upload_user', foto_ktp_file);
            formData.append('jkn_upload_user', foto_jkn_file);
            formData.append('pasien_jkn', pasien_jkn.value);
            formData.append('faskes_tingkat', faskes_tingkat.value);
            formData.append('nomer_kartu', nomer_kartu.value);
            
            fetch('/daftar/pasien_baru/', {
                method: 'POST',
                body: formData,
                credentials: 'include' // Include cookies
            })
                    .then(response => {
                        if (response.status === 409) {
                            swal('Error', 'NIK sudah terdaftar, silahkan mendaftar sebagai pasien lama', 'error');
                        } else if (response.status === 500) {
                            swal('Error', 'Kendala server', 'error');
                        } else if (response.status === 400) {
                            swal('Error', 'Tolong isi tanggal lahir!', 'error');
                        } else {
                            swal('Berhasil', 'Pendaftaran berhasil', 'success');
                            return response.json()
                        }
                    })
                    .then(data => {

                        window.location.href = '/verifikasi/' + data.antrian.id_registrasi_pasien;
                    })
                    .catch(error => {
                        // Handle the error
                        console.error('Error:', error);
                    });
        });
    });
</script>
