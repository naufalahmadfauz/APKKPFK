<body class="sidebar-mini" data-message="{{message}}" >
<div id="app">
    <div class="main-wrapper">
        <div class="navbar-bg"></div>
        <nav class="navbar navbar-expand-lg main-navbar">

        </nav>
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <h1>Status Pendaftaran</h1>
                </div>
                <div id="status_verifikasi" class="row">
                    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                        <div class="card">
                            <div class="card-body">
                                <div class="empty-state" data-height="400">
                                    <h2>Status Antrian</h2>
                                    <br>
                                    <div class="empty-state-icon">
                                        <i class="fa-solid fa-hourglass"></i>
                                    </div>
                                    <br>
                                    <h1 class="text-dark">Verifikasi</h1>
                                    <h2>Data Diri Anda Sedang Diproses</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div id="status_diterima" class="row">
                    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                        <div class="card">
                            <div class="card-body">
                                <div class="empty-state" data-height="400">
                                    <h2>Status Antrian</h2>
                                    <br>
                                    <div class="bg-success empty-state-icon">
                                        <i class="fa-solid fa-check-to-slot"></i>
                                    </div>
                                    <br>
                                    <h1 class="text-dark">Diterima</h1>
                                    <h2>Pendaftaran Anda Disetujui, Anda Akan Segera Dialihkan ke Halaman Antrian</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div id="status_ditolak" class="row">
                    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                        <div class="card">
                            <div class="card-body">
                                <div class="empty-state" data-height="400">
                                    <h2>Status Antrian</h2>
                                    <br>
                                    <div class="bg-danger empty-state-icon">
                                        <i class="fa-solid fa-xmark"></i>
                                    </div>
                                    <br>
                                    <h1 class="text-dark">Ditolak</h1>
                                    <h2>Pendaftaran Anda Ditolak, Silahkan lengkapi data diri anda atau coba lagi pada jam kerja.</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </section>
        </div>
        
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
  // Get the message value
  const message = document.body.getAttribute('data-message');

  // Get the divs
  const statusVerifikasiDiv = document.getElementById('status_verifikasi');
  const statusDiterimaDiv = document.getElementById('status_diterima');
  const statusDitolakDiv = document.getElementById('status_ditolak');

  // Initially hide all divs
  statusVerifikasiDiv.style.display = 'none';
  statusDiterimaDiv.style.display = 'none';
  statusDitolakDiv.style.display = 'none';

  // Show the div based on the message value
  if (message === 'Sedang Verifikasi') {
    statusVerifikasiDiv.style.display = 'block';
      setInterval(function() {
          location.reload();
      }, 5000);
  } else if (message === 'Ditolak') {
    statusDitolakDiv.style.display = 'block';
      setTimeout(function() {
          window.location.href = '/daftar';
      }, 7000); // 7000 milliseconds = 7 seconds
  } else if (message === 'Diterima') {
    statusDiterimaDiv.style.display = 'block';
      setTimeout(function() {
          window.location.href = '/antrian/saya';
      }, 7000); // 7000 milliseconds = 7 seconds
  }
});
    
</script>
