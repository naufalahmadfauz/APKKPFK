<script>
    
    
    
    document.addEventListener('DOMContentLoaded', function () {
        const kirim = document.getElementById('simpan_pengadaan_obat')
        kirim.addEventListener('click', function (event) {
            event.preventDefault();

            let nomer_seri_faktur_pajak = document.getElementById('nomer_seri_faktur_pajak').value
            let nama_pt_penjual = document.getElementById('nama_pt_penjual').value
            let alamat_pt_penjual = document.getElementById('alamat_pt_penjual').value
            let npwp_pt_penjual= document.getElementById('npwp_pt_penjual').value
            let ppn = document.getElementById('ppn').value
            let total_pajak = document.getElementById('total_pajak').value
            

            const detailPengadaanObatDivs = document.querySelectorAll('#detail_pengadaan_obat');

            // Construct the terapi array
            let pengadaanObat = Array.from(detailPengadaanObatDivs).map(div => {
                return {
                    id_obat: div.querySelector('#id_obat').value,
                    nomer_batch: div.querySelector('#nomer_batch').value,
                    expire: div.querySelector('#expire').value,
                    harga_satuan: div.querySelector('#harga_satuan').value,
                    jumlah: div.querySelector('#jumlah').value,
                    satuan: div.querySelector('#satuan').value,
                    harga_jual_satuan: div.querySelector('#harga_jual_satuan').value
                    // harga_jual_satuan: div.querySelector('#harga_satuan').value
                };
            });

            pengadaanObat = pengadaanObat.map(item => {
                let expireDate = new Date(item.expire);
                item.expire = moment(expireDate).format("YYYY-MM-DD HH:mm:ss.SSSSSS Z");
                return item;
            });

            for (let i = 0; i < pengadaanObat.length; i++) {
                if (!pengadaanObat[i].nomer_batch || !pengadaanObat[i].expire || !pengadaanObat[i].harga_satuan || !pengadaanObat[i].harga_jual_satuan) {
                    // Display an alert and stop the form submission
                    swal('Error', 'Tolong lengkapi pengadaan obat!', 'error');
                    event.preventDefault();
                    return;
                }
            }
            let data = {
                jenis_pengadaan_obat: 'Umum',
                detailPengadaanObat: pengadaanObat,
                nomer_seri_faktur_pajak,
                nama_pt_penjual,
                alamat_pt_penjual,
                npwp_pt_penjual,
                ppn,
                total_pajak
            }
            console.log(data)
            fetch('/apoteker/pengadaan_obat/{{pengadaan.id_pengadaan_obat}}', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
                credentials: 'include' // Include cookies
            })
                    .then(response => {
                        if (response.status === 400) {
                            swal('Gagal', 'Bukan array!', 'error');
                            return;
                        } else {
                            return response.json()
                        }
                    })
                    .then(data => {
                        swal('Berhasil', 'Pengadaan Obat Berhasil Disimpan! ', 'success');
                        // setTimeout(() => {
                        //     window.location.href = '/apoteker/list_pengadaan_obat';
                        // }, 5000);
                    })
                    .catch(error => {
                        swal('Gagal', 'Kendala Server', 'error');
                        console.error('Error:', error);
                    });


        });
    });
</script>

