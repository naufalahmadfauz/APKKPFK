        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <h1>Pengadaan Obat Umum</h1>
                </div>
                <div class="section-body">
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-12">
                            <div class="card card-primary">
                                <div class="card-header"><h4>Lengkapi Pengadaan Obat</h4></div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="form-group col-6">
                                            <label>ID Pengadaan Obat</label>
                                            <p class="text-dark bold">
                                                <strong> {{pengadaan.id_pengadaan_obat}} </strong></p>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="form-group col-6">
                                            <label>Status Pengadaan Obat</label>
                                            <p class="text-dark bold">
                                                <strong> {{pengadaan.status_pengadaan_obat}} </strong></p>
                                        </div>
                                        <div class="form-group col-6">
                                            <label>Jenis Pengadaan Obat</label>
                                            <p class="text-dark bold">
                                                <strong> {{pengadaan.jenis_pengadaan_obat}} </strong></p>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group col-6">
                                            <label>Nomer Seri Faktur Pajak</label>
                                            <input required id="nomer_seri_faktur_pajak" type="number"
                                                   class="form-control" name="nomer_seri_faktur_pajak">
                                        </div>
                                        <div class="form-group col-6">
                                            <label>NPWP</label>
                                            <input required id="npwp_pt_penjual" type="text" class="form-control"
                                                   name="npwp_pt_penjual">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-6">
                                            <label>Nama PT Penjual</label>
                                            <input required id="nama_pt_penjual" type="text" class="form-control"
                                                   name="nama_pt_penjual">
                                        </div>
                                        <div class="form-group col-6">
                                            <label>Alamat PT Penjual</label>
                                            <input required id="alamat_pt_penjual" type="text" class="form-control"
                                                   name="alamat_pt_penjual">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-6">
                                            <label>PPn</label>
                                            <input required id="ppn" type="number" class="form-control" name="ppn">
                                        </div>
                                        <div class="form-group col-6">
                                            <label>Total</label>
                                            <input required id="total_pajak" type="number" class="form-control"
                                                   name="total_pajak">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-12">
                            <div class="card card-primary">
                                <div class="card-header"><h4>Lengkapi Pengadaan Obat</h4></div>
                                <div class="card-body">
                                    <form>
                                        {{#each detailPengadaan}}
                                            <div id="detail_pengadaan_obat" class="row">
                                                <input hidden="hidden" id="id_obat" type="text" name="id_obat" value="{{id_obat}}">
                                                <input hidden="hidden" id="satuan" type="text" name="satuan" value="{{satuan}}">
                                                <input hidden="hidden" id="jumlah" type="text" name="jumlah" value="{{jumlah}}">
                                                
                                                <div class="form-group col-3">
                                                    <label>Nama Obat</label>
                                                    <p class="text-dark bold"><strong> {{dataObat.nama_obat}} </strong>
                                                    </p>
                                                </div>

                                                <div class="form-group col-3">
                                                    <label>Nomer Batch</label>
                                                    <input required id="nomer_batch" type="text" class="form-control"
                                                           name="nomer_batch">
                                                </div>

                                                <div class="form-group col-2">
                                                    <label>Expire</label>
                                                    <input required id="expire" type="date" class="form-control"
                                                           name="expire">
                                                </div>
                                                <div class="form-group col-2">
                                                    <label>Harga Satuan</label>
                                                    <input required id="harga_satuan" type="number" class="form-control"
                                                           name="harga_satuan">
                                                </div>
                                                <div class="form-group col-2">
                                                    <label>Harga Jual Satuan</label>
                                                    <input required id="harga_jual_satuan" type="number"
                                                           class="form-control" name="harga_jual_satuan">
                                                </div>
                                            </div>
                                        {{/each}}
                                    </form>

                                    <div class="form-group">
                                        <a id="simpan_pengadaan_obat" href="#" class="btn btn-primary"> Simpan Pengadaan
                                            Obat</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </section>
        </div>
    </div>
