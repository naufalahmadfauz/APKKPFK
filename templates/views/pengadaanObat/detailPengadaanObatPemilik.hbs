<body class="sidebar-mini">
<div id="app">
    <div class="main-wrapper">
        <div class="navbar-bg"></div>
        <nav class="navbar navbar-expand-lg main-navbar">
        </nav>
        <!-- Main Content -->
        <div class="main-content">
            <section class="section">
                <div class="section-header">
                    <h1>Detail Pengadaan Obat</h1>
                </div>
                <div class="row">
                    <div id="isi_print"
                         class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                        <div class="card card-primary">
                            <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label>ID Pengadaan Obat</label>
                                        <p class="text-dark bold"><strong>{{pengadaan.id_pengadaan_obat}} </strong></p>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="last_name">Nomer Seri Faktur Pajak</label>
                                        {{#if pengadaan.nomer_seri_faktur_pajak}}
                                            <p class="text-dark bold">
                                                <strong>{{pengadaan.nomer_seri_faktur_pajak}} </strong></p>
                                        {{else}}
                                            <p class="text-dark bold"><strong>-</strong></p>
                                        {{/if}}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="first_name">Status Pengadaan Obat</label>
                                        <p class="text-dark bold">
                                            <strong>{{pengadaan.status_pengadaan_obat}} </strong></p>
                                    </div>

                                    <div class="form-group col-6">
                                        <label for="first_name">Jenis Pengadaan Obat</label>
                                        <p class="text-dark bold"><strong>{{pengadaan.jenis_pengadaan_obat}} </strong>
                                        </p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-6">
                                        <label>Tanggal Pengadaan</label>
                                        <p class="text-dark bold"><strong
                                                id="tgl_pengadaan">{{pengadaan.createdAt}}</strong></p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="section-title">Detail Pengadaan Obat</div>
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                            <tr>
                                                <th scope="col">Nama Obat</th>
                                                <th scope="col">Expire</th>
                                                <th scope="col">Jumlah</th>
                                                <th scope="col">Satuan</th>
                                                <th scope="col">Harga Satuan</th>
                                                <th scope="col">Total</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {{#each detailPengadaan}}
                                                <tr>
                                                    <td>{{dataObat.nama_obat}}</td>
                                                    {{#if expire}}
                                                        <td id="expire-{{@index}}"></td>
                                                    {{else}}
                                                        <td>-</td>
                                                    {{/if}}
                                                    <td>{{jumlah}}</td>
                                                    <td>{{satuan}}</td>
                                                    {{#if harga_satuan}}
                                                        <td>Rp. {{harga_satuan}}</td>
                                                    {{else}}
                                                        <td>Rp. -</td>
                                                    {{/if}}
                                                    {{#if total}}
                                                        <td>Rp. {{total}}</td>
                                                    {{else}}
                                                        <td>Rp. -</td>
                                                    {{/if}}
                                                    <td>
                                                        <select id='status_pengadaan_pilih_{{@index}}' name='status_pengadaan_pilih_{{@index}}'
                                                                class="form-control form-control-sm">
                                                        <option >--</option>
                                                        <option value="Tolak">Tolak</option>
                                                        <option value="Disetujui">Setujui</option>
                                                    </select></td>
                                                </tr>
                                            {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="section-body">
                        <div class="form-group">
                            <a href="/apoteker/list_pengadaan_obat" class="btn btn-primary btn-lg btn-block">Kembali</a>
                            <a id="cetak" href="#" class="btn btn-dark btn-lg btn-block">Cetak</a>
                            {{#if pengadaanDiverifikasi}}
                                <a id="cek" href="#" class="btn btn-success btn-lg btn-block">Setujui</a>
                                <a id="tolak" href="#" class="btn  btn-danger btn-lg btn-block">Tolak Pengadaan Obat</a>
                            {{else}}
                                <a href="#" id="cek" class="btn disabled btn-success btn-lg btn-block">Setujui
                                    Pengadaan Obat</a>
                                <a href="#" id="tolak" class="btn disabled  btn-danger btn-lg btn-block">Tolak Pengadaan
                                    Obat</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<script src="https://unpkg.com/dayjs/dayjs.min.js"></script>

<script>
    // Select all the status_pengadaan select elements


    // Initialize an empty array to hold the updated detailPengadaan records

    let hasilArrayDetailPengadaan = []
        {{#each detailPengadaan}}
        hasilArrayDetailPengadaan.push({
            id_detail_pengadaan_obat: '{{this.id_detail_pengadaan_obat}}',
            status_pengadaan: '{{this.status_pengadaan}}'
        });
        {{/each}}
    // Select all the status_pengadaan select elements
    let statusSelects = document.querySelectorAll('select[name="status_pengadaan_pilih"]');
    let statusSelects2 = []
        {{#each detailPengadaan}}
        statusSelects2.push(document.querySelectorAll('select[name="status_pengadaan_pilih_{{@index}}"]'));
        {{/each}}
    
    // Initialize an empty array to hold the updated detailPengadaan records
    let updatedDetailPengadaan = [];
    
    // Iterate over each select element
    statusSelects2.forEach((select, index) => {
        
        // Get the corresponding detailPengadaan record
        let detailPengadaan = hasilArrayDetailPengadaan[index];
        
        // Update the status_pengadaan of the detailPengadaan record
        let cct = document.getElementById('status_pengadaan_pilih_' + index)
        cct.addEventListener('change', function () {
            detailPengadaan.status_pengadaan = cct.value;
        });
        // Push the updated detailPengadaan record into the array
        updatedDetailPengadaan.push(detailPengadaan);
    });

    // Now, updatedDetailPengadaan is an array of detailPengadaan records with updated status_pengadaan

    let cek = document.getElementById('cek');
    let tolak = document.getElementById('tolak');
    
    cek.addEventListener('click', function () {
        console.log(updatedDetailPengadaan)
        fetch('/pemilik/setujui_pengadaan/{{pengadaan.id_pengadaan_obat}}', {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                detailPengadaanObat: updatedDetailPengadaan
            }),
            credentials: 'include' // Include cookies
        })
                .then(response => {
                    if (response.status === 400) {
                        swal('Gagal', 'Bukan array!', 'error');
                        return;
                    } else {
                        return response.json()
                    }
                })
                .then(data => {
                    swal('Berhasil', 'Pengadaan Obat Berhasil Disetujui! ', 'success');
                    setTimeout(() => {
                        window.location.href = '/pemilik/list_pengadaan_obat';
                    }, 5000);
                })
                .catch(error => {
                    swal('Gagal', 'Kendala Server', 'error');
                    console.error('Error:', error);
                });

    });

    

    tolak.addEventListener('click', function () {
        fetch('/pemilik/tolak_pengadaan/{{pengadaan.id_pengadaan_obat}}', {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json',
            },
            credentials: 'include' // Include cookies
        })
                .then(response => {
                    if (response.status === 400) {
                        swal('Gagal', 'Bukan array!', 'error');
                        return;
                    } else {
                        return response.json()
                    }
                })
                .then(data => {
                    swal('Berhasil', 'Pengadaan Obat Berhasil Ditolak! ', 'success');
                    setTimeout(() => {
                        window.location.href = '/pemilik/list_pengadaan_obat';
                    }, 5000);
                })
                .catch(error => {
                    swal('Gagal', 'Kendala Server', 'error');
                    console.error('Error:', error);
                });
    });


    let formattedDateDetail;
        {{#each detailPengadaan}}
        if ('{{this.expire}}') {
            expireDate = '{{this.expire}}';
            formattedDateDetail = dayjs(expireDate).format('DD-MM-YYYY');
            document.getElementById('expire-' + {{@index}}).innerHTML = formattedDateDetail;
        }
        {{/each}}

    tglPengadaan = dayjs('{{pengadaan.createdAt}}').format('DD-MM-YYYY');
    console.log(tglPengadaan)
    document.getElementById('tgl_pengadaan').innerHTML = tglPengadaan;

    document.getElementById('cetak').addEventListener('click', function () {
        var printContents = document.getElementById('isi_print').innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;

        window.print();

        document.body.innerHTML = originalContents;
    });
</script>
